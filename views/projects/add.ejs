    <form method="POST">
        <div class="form-group row">
            <label for="inputNameProject" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="nameproject" name="name" placeholder="Project Name"
