<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

<!-- Custom styles for this template -->
<link href="./stylesheets/button.css" rel="stylesheet">


<div class="container-fluid">

  <!-- formulir -->
  <form id="form-filter" method="POST">
    <div class="container-fluid">
      <br>
      <h1><%= title %></h1>
      <hr>
      <h3> <small>Hello, <%= result.firstname %> <%= result.lastname %></small> </h3> <br>
      <div class="form-group row" >
        <label for="inputID" class="col-sm-2 col-form-label"> First Name </label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name='firstname' placeholder="First Name"
             value="<%= result.firstname %>">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputID" class="col-sm-2 col-form-label"> Last Name </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name='lastname' placeholder="Last Name"
                value="<%= result.lastname %>">
        </div>
    </div>
    <div class="form-group">
      <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="email" placeholder="Email" value="<%= result.email %>">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="password" placeholder="Input New Password">
        </div>
      </div>
    </div>
    
    <!-- form Position     -->
    <div class="form-group row">
      <label for="inputBoolean" class="col-sm-2 col-form-label"> Position </label>
      <div class="col-sm-10">
          <select class="custom-select" name="position">
              <option value="">Choose Position</option>
              <option value="Quality Assurance"
                  <%= result.position == 'Quality Assurance' ? 'selected' : '' %>>
                  Quality Assurance</option>
              <option value="Manager" <%= result.position == 'Manager' ? 'selected' : '' %>>Manager
              </option>
              <option value="Software Developer"
                  <%= result.position == 'Software Developer' ? 'selected' : '' %>>
                  Software Developer</option>
          </select>
      </div>
  </div>


      <!-- Type -->
     
        <div class="form-group row">
            <legend class="col-form-label col-sm-2 pt-0">Job Type</legend>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="job" id="gridRadios1"
                        value="Full Time" disabled <%= result.isfulltime == true ? 'checked' : '' %>>
                    <label class="form-check-label" for="gridRadios1">
                        Full Time
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="job" id="gridRadios2"
                        value="Part Time" disabled <%= result.isfulltime == false ? 'checked' : '' %>>
                    <label class="form-check-label" for="gridRadios2">
                        Part Time
                    </label>
                </div>
            </div>
        </div>
   

    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-update">Update</button>
        <a href="/projects" class="btn btn-cancel" type="button">Cancel</a>
      </div>
    </div>
  </form>
</div>
</div>    
<%- include("../partials/footer") %>  